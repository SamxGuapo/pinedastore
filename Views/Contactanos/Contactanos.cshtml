@model contactanosModel
@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contactanos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/contactoEstilo.css">
</head>
<body>
    <div class="container">
    
        <form  asp-action="VContactanos" asp-controller="Contactanos" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 bg p-5 rounded">
                <h2 class="text-center">Contactanos</h2>
                
                <label asp-for="nombre" for="nombre" class="form-label mt-4 fw-semibold">Nombres</label>
                <input  type="text" name="nombre" class="form-control" asp-for="nombre" placeholder="nombre"/>
                
                    <span asp-validation-for="nombre" class="text-danger"></span>
                    

                <div>
                       <label asp-for="correo" for="correo" class="form-label mt-3 fw-semibold">Correo electronico</label>
                      <input name="correo" type="email"
                       class="form-control"
                       asp-for="correo"
                       placeholder="correo electronico" />
                       <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <div class="m-3 fw">
                    <label asp-for="mensaje" for="mensaje">Mensaje</label>
                    <textarea asp-for="mensaje" class="form-control" name="mensaje" rows="6" cols="100"></textarea>
                    <span asp-validation-for="mensaje" class="text-danger"></span>
                </div>

                <button type="submit"
                       class="form-control btn-color mt-3"
                >Guardar</button>
        </form>

                   
                         <button type="submit" class="form-control btn-color mt-3" asp-action="slider" asp-controller="Carrusel">Salir</button>
                 
            </div>

        

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>