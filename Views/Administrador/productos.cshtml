@model AdministradorModel
@{

}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@{
    Layout = null;
}

<div container>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div class="Header">
    <h1 style="text-align:center">Productos</h1>
</div>
<div class="Body">
    <form asp-action="productos" asp-controller="Administrador" method="post" enctype="multipart/form-data">
        <div>
            <label for="Codigo" class="form-label">Codigo</label>
            <input type="text" asp-for="Codigo" class="form-control" />
        </div>
        <div>
            <label for="Nombre" class="form-label">Nombre</label>
            <input type="text" asp-for="Nombre" class="form-control" />
        </div>
        <div>
            <label for="Descripcion" class="form-label">Descripcion</label>
          @*   <textarea asp-for="Descripcion" class="form-control"></textarea> *@
            <input type="text" asp-for="Descripcion" class="form-control" />
        </div>
        <div>
            <label for="PrecioV" class="form-label">Precio venta</label>
            <input type="text" asp-for="precio" class="form-control" />
        </div>
        <div>
            <label for="Unidades" class="form-label">Unidades</label>
            <input type="text" asp-for="Unidades" class="form-control" />
        </div>

        <div>
            <label for="Estado" class="form-label">Estado</label>
                <select class="form-control" asp-for="Estado">
                   <option value=""></option>
                   <option value="1"> Activo</option>
                   <option value="2"> Inactivo</option>
                </select>         
        </div>
       
        <div class="form-group">
            <label asp-for="ImageFile">Subir Imagen</label>
            <input asp-for="ImageFile" class="form-group" type="file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        
                <div>
                    <button type="submit" value="Guardar">Guardar</button>
                </div>
                <div>


                    <button asp-action="slider" asp-controller="Carrusel" method="post" value="Salir">Salir</button>
                </div>
        
        
        

       


    </form>
    
</div>
</div>


