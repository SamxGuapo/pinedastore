@model provedorModel
@{

}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Proveedor | PinedaStore</title>
</head>
<body>



    <div class="container d-flex justify-content-center align-items-center min-vh-100">



        <div class="row border rounded-5 p-3 bg-white shadow box-area">



            <div class="container text-center">
                <form asp-action="provedores" asp-controller="provedor">
                    <div class="row align-items-center">
                        <div class="header-text mb-4">
                            <h2>Provedor</h2>
                            <p>Productos y precio.</p>
                        </div>
                        <div class="input-group mb-3">
                            <input class="form-control form-control-lg bg-light fs-6" asp-for="Id" placeholder="Identificacion del provedor">
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div> 
                        <div class="input-group mb-3">
                            <input class="form-control form-control-lg bg-light fs-6" asp-for="empresa" placeholder="Nombre de la Empresa">
                            <span asp-validation-for="empresa" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <input class="form-control form-control-lg bg-light fs-6" asp-for="nombre" placeholder="Nombre completo del provedor">
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                           @*  <label class="form-label">Fecha de Nacimiento</label> *@
                            <input class="form-control form-control-lg bg-light fs-6" asp-for="telefono" placeholder="Telefono del provedor" />
                            <span asp-validation-for="telefono" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <input class="form-control form-control-lg bg-light fs-6" name="correo" placeholder="Correo electronico del provedor">
                            <span asp-validation-for="correo" class="text-danger"></span>
                        </div>

                        <div class="input-group mb-5 d-flex justify-content-between">
                        </div>
                        <div class="input-group mb-3">
                            <button type="submit" class="btn btn-lg btn-primary w-100 fs-6">Guardar</button>

                        </div>
                        <div class="input-group mb-3">
                            <button class="btn btn-lg btn-primary w-100 fs-6" asp-action="Index" asp-controller="Inicio">Salir</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>

</body>
</html>